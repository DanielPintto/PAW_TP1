<!DOCTYPE html>
<html>

<head>
  <name>Book</name>
  <link rel="stylesheet" href="/stylesheets/detailStyle.css" />
</head>

<body>
  <div class="container">
    <h1>Book Details</h1>
    <td><img src="<%= item.cover%>"></td>
    <table class="table_details">
      <tbody>
        <tr hidden>
          <td>Id</td>
          <td>:</td>
          <td>
            <%= item._id %>
          </td>
        </tr>
        <tr>
          <td>name</td>
          <td>:</td>
          <td>
            <%= item.name %>
          </td>
        </tr>
        <tr>
          <td>Author</td>
          <td>:</td>
          <td>
            <%= item.author %>
          </td>
        </tr>
        <tr>
          <td>ISBN</td>
          <td>:</td>
          <td>
            <%= item.isbn %>
          </td>
        </tr>
        <tr>
          <td>Description</td>
          <td>:</td>
          <td>
            <%= item.description %>
          </td>
        </tr>
        <tr>
          <td>State</td>
          <td>:</td>
          <td>
            <%= item.state %>
          </td>
        </tr>
        <tr>
          <td>Stock</td>
          <td>:</td>
          <td>
            <%= item.stock %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <h3><a href="/books">Show All Books</a></h3>
</body>

</html>